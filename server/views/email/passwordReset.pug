extends baseEmail

block content
  p Dear #{firstName} #{lastName},
  p We have received a request to reset the password for your account. To proceed, please click the button below to securely reset your password.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset Password
  p This link is valid for 10 minutes for your security. If you did not initiate this request, please disregard this email, and no further action is required.